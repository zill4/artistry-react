{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonJS",
    "moduleResolution": "node",
    "isolatedModules": false,
    "jsx": "react",
    "reactNamespace": "React",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitUseStrict": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    // "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "artistry-react": [
        "scripts/modules/ArtistryReact"
      ]
    },
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "./src",
    "./examples"
  ],
  "compileOnSave": true,
  "buildOnSave": false
}